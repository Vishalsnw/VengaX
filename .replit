modules = ["java-graalvm22.3"]
run = "npm run build "

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run build "]

[workflows]
runButton = "Build Android APK"

[[workflows.workflow]]
name = "Build Android APK"
author = 45718520
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew assembleDebug"

[[workflows.workflow]]
name = "Setup Android Environment"
author = 45718520
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x gradlew"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew wrapper --gradle-version=8.0"
